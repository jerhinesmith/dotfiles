# Bash stuff
alias ll="ls -alGh"
alias grep='grep --color=auto'

# Work stuff
alias ee='cd /Users/jrhinesmith/projects/galactic'
alias dd='cd /Users/jrhinesmith/projects/doa'
alias lq='cd /Users/jrhinesmith/projects/lootquest'
alias uns='ssh galactic-staging.colo "ps aux | grep unicorn"'

# Rails stuff
alias bi='bundle install --path vendor'
alias be='bundle exec'
alias bake='bundle exec rake'
alias bails='bundle exec rails'
alias cons='bails c'
alias serv='bails s'
alias dcons='be script/console'
alias dserv='dd; bake tunnel:start_bg; be script/server'

# For fun
alias autovlat='find . -name "*.orig" | xargs -I {} git rm {}'

# Project stuff
alias pf='cd ~/projects/product_flow'
alias ga='cd ~/work/projects/galactic'
alias coe='cd ~/projects/coe'

# Spotify
alias ss='spotify'
alias ssp='ss play'
alias sspp='ss pause'

# Git stuff
alias ggc='git push -u origin $(current_branch)'
compdef ggc=git

alias ggd='git push origin :$(current_branch)'
compdef ggd=git

alias ggrm='git status | grep "deleted" | awk '"'"'{print $3}'"'"' | xargs -I {} git rm {}'
compdef ggrm=git
