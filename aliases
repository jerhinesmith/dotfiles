# Bash stuff
alias ll="ls -alGh"
alias grep='grep --color=auto'

# Rails stuff
alias bi='bundle install --path vendor'
alias be='bundle exec'
alias bake='bundle exec rake'
alias bails='bundle exec rails'
alias cons='bails c'
alias serv='bails s'

# For fun
alias autovlat='find . -name "*.orig" | xargs -I {} git rm {}'

# Spotify
alias ss='spotify'
alias ssp='ss play'
alias sspp='ss pause'

# Git stuff
alias ggc='git push -u origin $(current_branch)'
alias ggd='git push origin :$(current_branch)'
alias ggrm='git status | grep "deleted" | awk '"'"'{print $2}'"'"' | xargs -I {} git rm {}'

# Jump up, jump up, and get down
alias j='jump'
