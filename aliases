# Bash stuff
alias ll="ls -alGh"
alias grep='grep --color=auto'

# Rails stuff
alias bi='bundle install --path vendor'
alias be='bundle exec'
alias bake='bin/rake'
alias bails='bin/rails'
alias cons='bin/rails c'
alias serv='bin/rails s'

# For fun
alias autovlat='find . -name "*.orig" | xargs -I {} git rm {}'

# Spotify
alias ss='spotify'
alias ssp='ss play'
alias sspp='ss pause'

# Git stuff
alias ggc='git push -u origin $(current_branch)'
alias ggd='git push origin :$(current_branch)'
alias ggrm='git status | grep "deleted" | awk '"'"'{print $2}'"'"' | xargs -I {} git rm {}'

# Jump up, jump up, and get down
alias j='jump'

# Pow
alias rr='touch tmp/restart.txt'
alias taillog='tail -f log/development.log'

# Heroku
alias hgrep='history | grep -v grep | egrep -o "heroku\s.+$" | sort | uniq | grep'

